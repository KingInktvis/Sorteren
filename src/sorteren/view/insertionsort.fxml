<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<Tab xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.112" text="InsertionSort" fx:controller="sorteren.controller.InsertionSort">
    <content>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
                        <center>
                           <BarChart BorderPane.alignment="CENTER" fx:id="chart">
                             <xAxis>
                               <CategoryAxis side="BOTTOM" />
                             </xAxis>
                             <yAxis>
                               <NumberAxis side="LEFT" />
                             </yAxis>
                           </BarChart>
                        </center>
                        <bottom>
                           <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                              <children>
                                 <Button mnemonicParsing="false" onAction="#nextAction" text="Next">
                                    <HBox.margin>
                                       <Insets right="20.0" />
                                    </HBox.margin></Button>
                                 <Button mnemonicParsing="false" onAction="#autoAction" text="Start" fx:id="autoBtn">
                                    <HBox.margin>
                                       <Insets left="20.0" />
                                    </HBox.margin></Button>
                              </children>
                           </HBox>
                        </bottom>
                     </BorderPane>
    </content>
</Tab>